
.header {
  & .container {
    position: relative;
  }
  .navbar {
    margin: 0;
    & .navbar-nav {
      display: inline-block;
      float: none;
      padding-left: 0;
      vertical-align: bottom;
      li > a {
        padding: 15px 30px;
        color: brand-black;
        font-size: 14px;
        font-weight: 400;
        text-transform: uppercase;
        &:hover,
        &:focus {
          color: color-orange;
        }
      }
      .city {
        background: url("../../public/img/icons/icon-city.png") 7px 13px no-repeat;
      }
    }
    .navbar-collapse {
      text-align: center;
    }
    .navbar-toggle {
      .icon-bar {
        background: brand-primary;
      }
    }
  }
  .toolbar {
    position: absolute;
    top: 0;
    right: 0;
    width: 50px;
    height: 100px;
    background: brand-primary;
    a:hover,
    a:focus {
      border-color: transparent;
    }
    .inner {
      position: relative;
    }
    .btn-primary {
      width: 50px;
      height: 50px;
      padding: 0px 10px;
      border-radius: 0;
      background-color: transparent;
      font-size: 18px;
      line-height: 50px;
      color: brand-white;
      &.btn-search {
        width: 40px;
        height: 40px;
        line-height: 40px;
      }
    }
    .dropdown-search {
      top: 2px;
      right: 54px;
      left: auto;
      width: 300px;
      background: brand-primary;
      .form-control {
        height: 40px;
      }
    }
  }
  .home-logo {
    margin-top: 30px;
    margin-bottom: 30px;
    img {
      margin: 0 auto;
    }
  }
}

@media (max-width: 991px) {
  .navbar-header {
    float: none;
  }

  .navbar-left,
  .navbar-right {
    float: none !important;
  }

  .navbar-toggle {
    display: block;
  }

  .navbar-collapse {
    border-top: 1px solid transparent;
    box-shadow: inset 0 1px 0 rgba(255, 255, 255, .1);
  }

  .navbar-fixed-top {
    top: 0;
    border-width: 0 0 1px;
  }

  .navbar-collapse.collapse {
    display: none !important;
  }

  .navbar-nav {
    float: none !important;
    margin-top: 7.5px;
  }

  .navbar-nav > li {
    float: none;
  }

  .navbar-nav > li > a {
    padding-top: 10px;
    padding-bottom: 10px;
  }

  .collapse.in {
    display: block !important;
  }

  .navbar-form .input-group .form-control {
    width: auto;
    display: table-cell;
    width: 100%;
  }

}

@media (min-width: 992px) {

  .header-product {
    .navbar-unlogin>li>a {
      padding: 15px 12px;
    }
  }
  
  .navbar-form .input-group .form-control {
    width: auto;
    display: table-cell;
    width: 100%;
  }

  .col-md-height {
    display: table-cell;
    float: none !important;
  }

  .navbar-second .nav li:first-child a {
    padding-left: 0;
  }

  .section.page-top .container .breadcrumb {
    padding-left: 15px;
  }

  .header-product {
    z-index: 11;
    margin-top: 50px;
    .navbar-fixed-top {
      position: fixed !important;
    }
  }
}

.navbar-second .nav li a {
  padding-top: 12px;
}

@media (max-width: 1200px) and (min-width: 991px) {
  .navbar-second .nav li a {
    padding-left: 8px;
    padding-right: 8px;
  }
}

.navbar {
  z-index: 100;
  &-brand {
    padding: 10px;
  }
  &-inverse {
    margin-bottom: 0;
    position: relative !important;
  }
  &-second {
    margin-bottom: 0;
    z-index: 99;
    background: #fff;
    .nav {
      li a {
        font-weight: font-weight-normal;
        font-size: 13px;
      }
    }
  }
}